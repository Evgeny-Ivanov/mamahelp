.modal.fade#logInFormModal(tabindex='-1', role='dialog', aria-labelledby='logInFormLabel')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='false') &times;
            .modal-body.center-block.login-modal
                ul.nav
                    li
                        form(action='/auth/twitter' method='get')
                            button.btn-social.btn-twitter(type='submit') Login with Twitter
                                span.fa.fa-twitter

                    li
                        form(action='/auth/facebook' method='get')
                            button.btn-social.btn-facebook(type='submit') Login with Facebook
                                span.fa.fa-facebook

                    li
                        form(action='/auth/google' method='get')
                            button.btn-social.btn-google(type='submit') Login with Google
                                span.fa.fa-google-plus







    div
        a(href='/') Mama Help
        if !user
            div
                a(href="/auth/twitter") Login with Twitter
            div
                a(href="/auth/facebook") Login with Facebook
            div
                a(href="/auth/google") Login with Google
        else
            div #{__('Hello')} #{user.name}
            div
                a(href="/auth/logout") Logout
        div


    div Current user locale: #{locale}
    div
        ul
            each val in systemLocales
                li= val
