header
    .container-fluid#header
        .row
            .col-xs-12
                div.center-block.text-center#nav-search-input
                    .search-input-wrapper
                        span.glyphicon.glyphicon-search#glyphicon-search2
                        input#search-terms(type='text', name='search-terms', placeholder='Print here')
                        span.glyphicon.glyphicon-remove
            .col-xs-10.col-sm-6.col-md-3.col-lg-3.site-name
                a(href='/') Mama Help
            .col-xs-2.col-sm-6.col-md-3.col-md-push-6.col-lg-2.col-lg-push-7.nav-btn-holder
                .col-sm-12.padding-zero
                    //form#search(action='#', method='post')
                        //div#nav-search-label
                    button.btn.btn-default.pull-right.site-search#nav-search-label(type='button')
                        span#glyphicon-search1.glyphicon.glyphicon-search
                        //div#nav-search-input
                            input#search-terms(type='text', name='search-terms', placeholder='Print here')
                    .hidden-xs.lang-switcher.pull-right
                        ul.nav
                            each val in systemLocales
                                if val != locale
                                    li.pull-right
                                        a(href='/#{val}')
                                            img(src='/img/#{val}.png')
                .hidden-xs.col-sm-12.padding-zero
                    if !user
                        ul.nav-pills.nav.pull-right
                            li
                                a(href='') Sign up
                            li
                                button.btn.btn-default(type='button', data-toggle='modal', data-target='#logInFormModal') Log in
                    else
                        .dropdown
                            a.pull-right#userNameDropdown(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                p.inline-block #{user.name}
                                span.glyphicon.glyphicon-menu-down
                            ul.dropdown-menu(aria-labelledby='userNameDropdown')
                                li
                                    a Profile
                                li
                                    a Settings
                                li.divider(role='separator')
                                li
                                    a Log out
            nav.navbar.navbar-default.col-xs-3.col-sm-12.col-md-6.col-md-pull-3.col-lg-6.col-lg-pull-2

                button.navbar-toggle.collapsed.pull-left(type='button' data-toggle='collapse' data-target='#navbar-collapse-1' aria-expanded='false')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                .collapse.navbar-collapse.pull-left#navbar-collapse-1
                    if !user
                        ul.nav.navbar-nav
                            li
                                a(href='') Home
                            li
                                a(href='') About project
                            li
                                a(href='') Blog
                            li
                                a(href='') Forum
                    else
                        ul.nav.navbar-nav
                            li
                                a(href='') Home
                            li
                                a(href='') Connections
                            li
                                a(href='') Bookmarks
                            li
                                a(href='') Messages
                            li
                                a(href='') Blog
                            li
                                a(href='') Forum

            .col-xs-9.hidden-sm.hidden-md.hidden-lg
                if !user
                    ul.nav-pills.nav.pull-right
                        li
                            a(href='') Sign up
                        li
                            button(type='button', data-toggle='collapse', data-target='#logInForm-collapse' aria-expanded='false') Log in
                else
                    ul.nav-pills.nav.pull-right
                        li
                            #{__('Hello')} #{user.name}
